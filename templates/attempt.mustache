{{!
    @template report_matrixreport/overview
}}

<div>
    <h2>{{quizname}}</h2>
    <div>
        {{#attempts}}
            <a href="{{{url}}}" style="{{#active}}background-color: red;{{/active}}">
            <span class="name mr-1">
                {{id}}
            </span>
            </a>
        {{/attempts}}
    </div>

    <div>
        {{#results}}
            <div>
                <span>
                    {{name}}
                </span>
                <span>
                    {{fraction}}
                </span>
            </div>
        {{/results}}
    </div>
</div>