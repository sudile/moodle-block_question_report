{{!
    @template report_matrixreport/overview
}}

<div>
    <h2>{{quizname}}</h2>
    <div>
        {{#attempts}}
            <a href="{{{url}}}" style="{{#active}}background-color: red;{{/active}}">
            <span class="name mr-1">
                {{id}}
            </span>
            </a>
        {{/attempts}}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Fraction</th>
            <th scope="col">Feedback</th>
            <th scope="col">Progress</th>
        </tr>
        </thead>
        <tbody>
        {{#results}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>
                    {{name}}
                </td>
                <td>
                    {{fraction}}
                </td>
                <td>
                    {{feedback}}
                </td>
                <td>
                    <div class="progressbar" style="display: inline-block; width: 100px;">
                        <div style="width: {{percentage}}%; border-radius: 10px;  height: 30px; background-color: {{color}}">
                        </div>
                    </div>
                </td>
            </tr>
        {{/results}}
        </tbody>
    </table>
</div>