{{!
    @template block_question_report/attempt
}}

<div>
    <h2>{{quizname}}</h2>
    <div class="mb-2">
        <div class="mb-1">
            <a class="btn btn-secondary" href="{{{back}}}">
                {{#str}}back, block_question_report{{/str}}
            </a>
        </div>
        {{#attempts}}
            <a href="{{{url}}}" class="mr-1 btn {{#active}}btn-primary{{/active}}{{^active}}btn-secondary{{/active}}">
            <span class="name">
                {{id}}
            </span>
            </a>
        {{/attempts}}
    </div>

    <div>
        {{{chart}}}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">{{#str}}table_name, block_question_report{{/str}}</th>
            <th scope="col">{{#str}}table_percentage, block_question_report{{/str}}</th>
            <th scope="col">{{#str}}table_feedback, block_question_report{{/str}}</th>
            <th scope="col">{{#str}}table_progress, block_question_report{{/str}}</th>
            <th scope="col">{{#str}}table_avgprogress, block_question_report{{/str}}</th>
        </tr>
        </thead>
        <tbody>
        {{#results}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>
                    {{name}}
                </td>
                <td>
                    {{fraction}}
                </td>
                <td>
                    {{feedback}}
                </td>
                <td>
                    <div class="progressbar">
                        <div class="progress" style="width: {{percentage}}%; background-color: {{color}}">
                        </div>
                    </div>
                </td>
                <td>
                    <div class="progressbar">
                        <div class="progress" style="width: {{avg}}%; background-color: {{avgcolor}}">
                        </div>
                    </div>
                </td>
            </tr>
            {{#subpoints}}
                <tr>
                    <th scope="row"></th>
                    <td>
                        {{name}}
                    </td>
                    <td>
                        {{fraction}}
                    </td>
                    <td>
                        {{feedback}}
                    </td>
                    <td>
                        <div class="progressbar">
                            <div class="progress" style="width: {{percentage}}%; background-color: {{color}}">
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="progressbar">
                            <div class="progress" style="width: {{avg}}%; background-color: {{avgcolor}}">
                            </div>
                        </div>
                    </td>
                </tr>
            {{/subpoints}}
        {{/results}}
        </tbody>
    </table>
</div>